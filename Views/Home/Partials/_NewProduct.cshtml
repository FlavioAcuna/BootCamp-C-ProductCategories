@model Product
<div class="col">
    <h2 class="text-center">Agregar Producto</h2>
    <form asp-action="AddProduct" asp-controller="Home" method="post">
        <div class="container">
            <div class="row">
                <div class="row my-2">
                    <div class="col">
                        <label asp-for="Name">Nombre: </label>
                    </div>
                    <div class="col">
                        <input asp-for="Name"><br>
                        <span asp-validation-for="Name"></span>
                    </div>
                </div>
                <div class="row my-2">
                    <div class="col">
                        <label asp-for="Description">Descripcion: </label>
                    </div>
                    <div class="col">
                        <input asp-for="Description"> <br>
                        <span asp-validation-for="Description"></span>
                    </div>
                </div>
                <div class=" row my-2">
                    <div class="col">
                        <label asp-for="Price">Precio: </label>
                    </div>
                    <div class="col">
                        <input asp-for="Price"> <br>
                        <span asp-validation-for="Price"></span>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Agregar</button>
        </div>
    </form>
</div>
