@model Category
<div class="col">
    <h2 class="text-center">Agregar Categoria</h2>
    <form asp-action="AddCategory" asp-controller="Home" method="post">
        <div class="container">
            <div class="row">
                <div class="row my-2">
                    <div class="col">
                        <label asp-for="Name">Nombre: </label>
                    </div>
                    <div class="col">
                        <input asp-for="Name"><br>
                        <span asp-validation-for="Name"></span>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Agregar</button>
    </form>
</div>
</div>